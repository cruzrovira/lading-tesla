    id="menu-backdrop"
    class={`
      absolute 
      rounded bg-gray-500 
      backdrop-blur-lg transition-all 
      duration-300 ease-in-out
      left-[var(--left)] 
      top-[var(--top)] 
      h-[var(--height)] 
      w-[var(--width)]
       opacity-0
       -z-10
      `}
  >
